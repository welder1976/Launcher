<UserControl x:Class="MagicStorm_Launcher.OtherWindows.Childs.AvatarSelectionSpawn"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:MagicStorm_Launcher.OtherWindows.Childs"
             mc:Ignorable="d" 
             Height="80" Width="80" Margin="10,0,0,10" Loaded="UserControl_Loaded" BorderThickness="0">
    <UserControl.BorderBrush>
        <LinearGradientBrush EndPoint="0.5,1" MappingMode="RelativeToBoundingBox" StartPoint="1,0">
            <GradientStop Color="#FF393A4F" Offset="1"/>
            <GradientStop Color="#FF6AD6FF"/>
        </LinearGradientBrush>
    </UserControl.BorderBrush>
    <Grid>
        <Image x:Name="imgAvatar" Cursor="Hand" Source="/MagicStorm Launcher;component/Assets/Avatars/default.jpg" MouseLeftButtonUp="imgAvatar_MouseLeftButtonUp"/>
        <CheckBox x:Name="chkAvatar" Content="" HorizontalAlignment="Right" VerticalAlignment="Bottom" Style="{DynamicResource CheckBox2}" Background="Black" Padding="0,-1,0,0" Checked="chkAvatar_Checked" Unchecked="chkAvatar_Unchecked"/>

    </Grid>
</UserControl>
