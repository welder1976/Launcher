<UserControl x:Class="MagicStorm_Launcher.Spinners.BlueSpinnerTwo"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:MagicStorm_Launcher.Spinners"
             mc:Ignorable="d" 
             d:DesignHeight="80" d:DesignWidth="80">
    <StackPanel x:Name="Spinner">
        <Image Source="/MagicStorm Launcher;component/Assets/blue-circle-loader2.png" RenderTransformOrigin="0.5, 0.5" Visibility="Visible">
            <Image.RenderTransform>
                <RotateTransform x:Name="noFreeze" />
            </Image.RenderTransform>
            <Image.Triggers>
                <EventTrigger RoutedEvent="Loaded">
                    <BeginStoryboard>
                        <Storyboard>
                            <DoubleAnimation Storyboard.TargetProperty="(Image.RenderTransform).(RotateTransform.Angle)"
                            To="360" Duration="0:0:1" RepeatBehavior="Forever"/>
                        </Storyboard>
                    </BeginStoryboard>
                </EventTrigger>
            </Image.Triggers>
        </Image>
    </StackPanel>
</UserControl>
