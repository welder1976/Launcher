<Window x:Class="Launcher.LNewVer"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Обновление лаунчера" Height="187" Width="413" ResizeMode="NoResize" Topmost="true"
        WindowStartupLocation="CenterScreen" WindowStyle="ToolWindow">
  <Grid>
    <RichTextBox AcceptsReturn="false" IsReadOnly="true" Margin="10,35,10,41" BorderBrush="White">
      <FrameworkElement.Resources>
        <Style TargetType="{x:Type Hyperlink}">
          <Setter Property="FrameworkContentElement.Cursor" Value="Hand"/>
        </Style>
      </FrameworkElement.Resources>
      <FlowDocument>
        <Paragraph FontSize="20">
          <Run Text="Доступна новая версия лаунчера. "/>
        </Paragraph>
        <Paragraph FontSize="20">
          <Hyperlink>
            <Run Text="Нажмите для загрузки."/>
          </Hyperlink>
        </Paragraph>
      </FlowDocument>
    </RichTextBox>
  </Grid>
</Window>